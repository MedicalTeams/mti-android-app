<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="org.mti.hip.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/includeable_dev_mode"
        android:id="@+id/dev_mode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:layout_width="match_parent"
        android:padding="32dp"
        android:text="Health Information Program"
        android:id="@+id/logo"
        android:background="@color/colorPrimary"
        android:textColor="#FFF"
        android:layout_below="@id/tv_version"
        android:gravity="center"
        android:layout_marginTop="22dp"
        android:textStyle="bold"
        android:textSize="@dimen/title_font"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/sp_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:layout_marginTop="24dp"
        android:padding="24dp"
        android:textSize="@dimen/body_font_medium"
        android:background="@drawable/spinner_border"/>

    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sp_country"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:padding="24dp"
        android:text="@string/register_device"
        android:textAllCaps="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <include layout="@layout/includeable_powered_by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>


