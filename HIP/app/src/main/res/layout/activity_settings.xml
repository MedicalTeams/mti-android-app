<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/edge_margin"
    tools:context="org.mti.hip.SettingsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="340dp"
        android:layout_marginLeft="32dp"
        android:layout_height="wrap_content">


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/edge_margin">

            <TextView
                android:id="@+id/tv_label_visit_type"
                android:textSize="@dimen/body_font_medium"
                android:text="Mode:"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />


            <RadioButton
                android:id="@+id/rb_production"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Prod"
               android:textSize="@dimen/body_font_medium" />

            <RadioButton
                android:id="@+id/rb_test"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Test"
               android:textSize="@dimen/body_font_medium" />
        </RadioGroup>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/edge_margin">

            <TextView
                android:id="@+id/tv_label_visit_type"
                android:textSize="@dimen/body_font_medium"
                android:text="Country:"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />


            <Spinner
                android:id="@+id/sp_country"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/body_font_medium"/>
        </RadioGroup>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/edge_margin">

            <TextView
                android:textSize="@dimen/body_font_medium"
                android:text="Version Number:"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_version"
                android:textSize="@dimen/body_font_medium"
                android:text="x.x.x"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </RadioGroup>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/edge_margin">

            <TextView
                android:textSize="@dimen/body_font_medium"
                android:text="Device Id:"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_device_id"
                android:textSize="@dimen/body_font_medium"
                android:text="XYZ"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </RadioGroup>
    </LinearLayout>

</RelativeLayout>
